
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/stylesheets/main.css">
    <title></title>
  </head>
  <body>

    <div class="">

    <% @beers.each do |beer| %>

    <a href="/beers/<%= beer.id %>" class="item">
    <img src="<%= beer.image_url %>">

    <h3 >
    "<%= beer.name %>"
    <p>by</p>
    <%= beer.company %>
    </h3>
  </a>

  <form class="favourites" action="/favourite" method="post">
    <input type="hidden" name="beer_id" value="<%= beer.id %>">
    <button>Add to Favourites</button>
  </form>
    <% end %>
  </div>


<footer>
  <a href="/beers/new" class="new">post new beer</a>
</footer>



  </body>
</html>
